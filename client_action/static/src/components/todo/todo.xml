<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="client_action.Todo" owl="1">
        <h3 t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
            <input class="checkbox_input" type="checkbox" t-att-id="props.id" t-att-checked="props.done" t-on-click="onClick"/>
            <t t-esc="props.id"/>
.
            <t t-esc="props.description"/>
            <span class="fa fa-remove" t-on-click="onDelete"/>
        </h3>
    </t>
</templates>
