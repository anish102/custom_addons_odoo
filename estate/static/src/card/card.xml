<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="estate_propeties.Card" owl="1">
        <div class="card" style="width: 30rem; padding:10px 50px" t-att-class="props.className">
            <div class="card-body">
                <t t-if="props.slots.title">
                    <h2 class="card-title">
                        <t t-slot="title"/>
                    </h2>
                </t>
                <h2 class="card-text" style="font-size: 40px;">
                    <t t-slot="default"/>
                </h2>
            </div>
        </div>
    </t>
</templates>