<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="estate_property_offer_view_tree" model="ir.ui.view">
            <field name="name">estate.property.view.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Estate property offer view tree">
                    <field name="price"></field>
                    <field name="partner_id"></field>
                    <field name="status"></field>
                    <field name="validity" string= "Validity(days)"></field>
                    <field name="date_deadline" string="Deadline"></field>
                    <button name="action_offer_accept" string=" " type="object" icon="fa-check"/>
                    <button name="action_offer_refuse" string=" " type="object" icon="fa-times"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_offer_view_form" model="ir.ui.view">
            <field name="name">estate.property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Estate property offer view form">
                    <sheet>
                        <group>
                            <field name="price"></field>
                            <field name="partner_id"></field>
                            <field name="status"></field>
                            <field name="validity" string= "Validity(days)"></field>
                            <field name="date_deadline" string="Deadline"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
